@model PagedList.IPagedList<BelotApp.ViewModels.GameVM>

<div class="mb-2 mb-3 pe-3 ps-3">
    <div class="d-md-flex justify-content-between align-items-center text-center">
        <p class="mb-2 mb-md-0 title">MOJE IGRE</p>
        <form asp-action="Index" method="get" class="d-flex">
            <a asp-action="Create" class="btn btn-primary me-2 round-btn"><i class="fa-solid fa-plus"></i></a>
            <div class="flex-grow-1 mr-2">
                <input type="text" name="SearchString" id="SearchString" class="form-control border-0 custom-shadow bg-white" placeholder="Pretraži po timu" value="@ViewData["CurrentFilter"]" />
            </div>
            <button type="submit" class="btn btn-primary"><i class="fa-solid fa-magnifying-glass"></i></button>
        </form>
    </div>
</div>

@if (Model.Count == 0)
{
    <div class="d-flex justify-content-center align-items-center pt-5 p-5">
        <h5 class="text-center text-secondary">Nemate aktivnih igara, kreirajte novu igru klikom na "+".</h5>
    </div>
}

<div class="row">
    @foreach (var item in Model)
    {
        var playedAtDate = item.PlayedAt.ToString("dd/MM/yyyy");

        <div class="col-lg-4 col-md-6 mb-4">
            <a href="@Url.Action("Index", "GameResults", new { gameId = item.Id })" class="card-link">
                <div class="card border-0 shadow-sm enlarge-card" style="min-width: 265px; border-radius: 20px;">
                    <div class="card-img-top" style="background: #2C75C8; height: 100px; display: flex; justify-content: center; align-items: center; border-radius: 20px">
                        <h1 class="text-white">@playedAtDate</h1>
                    </div>
                    <div class="card-body" style="width: 100%;">
                        <div class="d-flex flex-wrap">
                            <div class="col text-center">
                                <p class="card-header-text">TIM</p>
                                <p class="card-content">@Html.DisplayFor(modelItem => item.TeamOneName)</p>
                            </div>
                            <div class="col text-center">
                                <p class="card-header-text">POBJEDNIK</p>
                                <p class="card-content">@Html.DisplayFor(modelItem => item.Winner)</p>
                            </div>
                            <div class="col text-center">
                                <p class="card-header-text">TIM</p>
                                <p class="card-content">@Html.DisplayFor(modelItem => item.TeamTwoName)</p>
                            </div>
                        </div>
                        <hr />
                        <div style="width: 100%;" class="d-flex justify-content-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" style="color: gray">
                                <i class="fa-regular fa-pen-to-square"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

<div class="pagination d-flex justify-content-center">
    <ul class="pagination">
        @if (Model.PageNumber > 1)
        {
            <li class="page-item">
                <a class="page-link btn btn-sm" href="@Url.Action("Index", new { page = Model.PageNumber - 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })">Prethodna</a>
            </li>
        }

        @if (Model.PageCount > 1)
        {
            @for (var pageNumber = Math.Max(1, Model.PageNumber - 2); pageNumber <= Math.Min(Model.PageCount, Model.PageNumber + 2); pageNumber++)
            {
                <li class="page-item @(Model.PageNumber == pageNumber ? "active" : "")">
                    <a class="page-link btn btn-sm" href="@Url.Action("Index", new { page = pageNumber, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })">@pageNumber</a>
                </li>
            }
        }

        @if (Model.PageNumber < Model.PageCount)
        {
            <li class="page-item">
                <a class="page-link btn btn-sm" href="@Url.Action("Index", new { page = Model.PageNumber + 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })">Sljedeća</a>
            </li>
        }
    </ul>
</div>