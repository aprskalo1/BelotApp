@model PagedList.IPagedList<BelotApp.ViewModels.GameVM>

@{
    ViewData["Title"] = "Index";
}

<div class="pt-2">
    <div class="d-md-flex justify-content-between align-items-center">
        <h1 class="mb-3 mb-md-0">MOJE IGRE</h1>
        <form asp-action="Index" method="get" class="d-flex">
            <div class="form-group flex-grow-1 mr-2">
                <label for="SearchString" class="sr-only">Pretraži po timu:</label>
                <input type="text" name="SearchString" id="SearchString" class="form-control" placeholder="Pretraži po timu" value="@ViewData["CurrentFilter"]" />
            </div>
            <button type="submit" class="btn btn-primary">Traži</button>
            <a asp-action="Index" class="btn btn-secondary ml-2">Očisti</a>
        </form>
    </div>
</div>

<div class="container p-0 d-flex justify-content-center">
    <a asp-action="Create" class="cool-button">NOVA IGRA</a>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-0 shadow-sm enlarge-card" style="min-width: 265px; border-radius: 20px;">
                <div class="card-img-top" style="background: #2C75C8; height: 100px; display: flex; justify-content: center; align-items: center; border-radius: 20px">
                    <h4 class="text-white">@Html.DisplayFor(modelItem => item.PlayedAt)</h4>
                </div>
                <div class="card-body" style="width: 100%;">
                    <div class="d-flex flex-wrap">
                        <div class="col text-center">
                            <p>TIM 1</p>
                            <p>@Html.DisplayFor(modelItem => item.TeamOneName)</p>
                        </div>
                        <div class="col text-center">
                            <p>Pobjednik</p>
                            <p>@Html.DisplayFor(modelItem => item.Winner)</p>
                        </div>
                        <div class="col text-center">
                            <p>TIM 2</p>
                            <p>@Html.DisplayFor(modelItem => item.TeamTwoName)</p>
                        </div>
                    </div>
                    <hr />
                    <div style="width: 100%;" class="d-flex justify-content-end">
                        <a asp-action="Edit" asp-route-id="@item.Id" style="color: gray">
                            <i class="fa-regular fa-pen-to-square"></i>
                        </a>
                    </div>


                    @*                    <a asp-action="Index" asp-controller="GameResults" asp-route-gameId="@item.Id" class="btn btn-secondary">Rezultati</a>
                *@
                </div>
            </div>
        </div>
    }
</div>

<div class="pagination d-flex justify-content-center">
    <ul class="pagination">
        @if (Model.PageNumber > 1)
        {
            <li class="page-item">
                <a class="page-link btn btn-sm" href="@Url.Action("Index", new { page = Model.PageNumber - 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })">Prethodna</a>
            </li>
        }

        @if (Model.PageCount > 1)
        {
            @for (var pageNumber = Math.Max(1, Model.PageNumber - 2); pageNumber <= Math.Min(Model.PageCount, Model.PageNumber + 2); pageNumber++)
            {
                <li class="page-item @(Model.PageNumber == pageNumber ? "active" : "")">
                    <a class="page-link btn btn-sm" href="@Url.Action("Index", new { page = pageNumber, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })">@pageNumber</a>
                </li>
            }
        }

        @if (Model.PageNumber < Model.PageCount)
        {
            <li class="page-item">
                <a class="page-link btn btn-sm" href="@Url.Action("Index", new { page = Model.PageNumber + 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })">Sljedeća</a>
            </li>
        }
    </ul>
</div>

