@model BelotApp.ViewModels.GameVM

@{
    ViewData["Title"] = "Edit";
}

<div class="d-flex flex-wrap flex-column justify-content-center align-content-center">
    <div class="title">Uredi igru</div>
    <hr />
    <div class="row input-form">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TeamOneName" class="control-label"></label>
                <input asp-for="TeamOneName" class="form-control border-0 custom-shadow bg-white mb-2" />
                <span asp-validation-for="TeamOneName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamTwoName" class="control-label"></label>
                <input asp-for="TeamTwoName" class="form-control border-0 custom-shadow bg-white mb-2" />
                <span asp-validation-for="TeamTwoName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameLength" class="control-label"></label>
                <select asp-for="GameLength" class="form-control border-0 custom-shadow bg-white mb-2">
                    <option value="1001">1001</option>
                    <option value="701">701</option>
                    <option value="501">501</option>
                </select>
                <span asp-validation-for="GameLength" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Spremi" class="btn btn-primary" />
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirmationModal">
                    Obriši
                </button>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                Želite li obrisati igru?
            </div>
            <div class="modal-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Obriši" class="btn btn-danger" />
                </form>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zatvori</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
