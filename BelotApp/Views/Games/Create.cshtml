@model BelotApp.ViewModels.GameVM

@{
    ViewData["Title"] = "Create";
}

<div class="d-flex flex-wrap flex-column justify-content-center align-content-center">
    <div class="title">Nova igra</div>
    <hr />
    <div class="row input-form">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeamOneName" class="control-label"></label>
                <input asp-for="TeamOneName" class="form-control border-0 custom-shadow bg-white" />
                <span asp-validation-for="TeamOneName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamTwoName" class="control-label"></label>
                <input asp-for="TeamTwoName" class="form-control border-0 custom-shadow bg-white" />
                <span asp-validation-for="TeamTwoName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameLength" class="control-label"></label>
                <select asp-for="GameLength" class="form-control border-0 custom-shadow bg-white">
                    <option value="1001">1001</option>
                    <option value="701">701</option>
                    <option value="501">501</option>
                </select>
                <span asp-validation-for="GameLength" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Spremi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}